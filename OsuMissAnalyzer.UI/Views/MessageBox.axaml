<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="OsuMissAnalyzer.UI.Views.MessageBox"
        Title="MessageBox" Height="200" Width="300">
  <DockPanel>
    <Panel Name="ButtonsOuter" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" DockPanel.Dock="Bottom" Margin="12">
      <StackPanel Name="Buttons" Orientation="Horizontal" Spacing="4" HorizontalAlignment="Center"/>
    </Panel>
    <TextBlock Text="{Binding Message}" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
  </DockPanel>
</Window>
